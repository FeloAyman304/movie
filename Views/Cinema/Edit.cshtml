


@model movie_hospital_1.dataModel.Cinema

<h2 class="mb-4 text-center">✏️ Edit Cinema</h2>

<form asp-action="Edit" method="post" enctype="multipart/form-data">
    <input type="hidden" asp-for="Id" />

    <div class="mb-3">
        <label asp-for="Name" class="form-label">Cinema Name</label>
        <input asp-for="Name" class="form-control" />
    </div>


    <div class="form-group">
        <label asp-for="Location"></label>
        <input asp-for="Location" class="form-control" />
        <span asp-validation-for="Location" class="text-danger"></span>
    </div>


    <div class="mb-3">
        <label class="form-label">Current Image</label><br />
        @if (!string.IsNullOrEmpty(Model.ImageURL))
        {
            <img src="@Model.ImageURL" class="imgCinema mb-2" alt="Cinema Image" />
        }
        else
        {
            <span class="text-muted">No image uploaded</span>
        }
    </div>

    <div class="mb-3">
        <label class="form-label">Upload New Image</label>
        <input type="file" name="ImageFile" class="form-control" accept="image/*" />
    </div>

    <button type="submit" class="btn btn-primary">💾 Update</button>
    <a asp-action="Index" class="btn btn-secondary">⬅ Back</a>
</form>

            <style>
    /* General Body Styling (Consistency) */
    body {
        background-color: #0d0a17;
        color: #f0f0f0;
        font-family: 'Arial', sans-serif;
        padding: 20px;
    }

    /* Page Heading Styling */
    h2.mb-4.text-center {
        color: #d175ff; /* Bright purple/magenta for the main heading */
        text-shadow: 0 0 10px rgba(209, 117, 255, 0.8);
        margin-bottom: 30px !important;
    }

    /* Form Container Styling */
    form {
        max-width: 500px;
        margin: 0 auto;
        padding: 30px;
        background-color: #1a1625; /* Dark background for the form area */
        border: 1px solid #6a0dad;
        border-radius: 12px;
        box-shadow: 0 0 20px rgba(106, 13, 173, 0.7), 0 0 5px rgba(106, 13, 173, 0.5); /* Neon glow */
    }

    /* Label Styling */
    .form-label,
    label {
        color: #d175ff; /* Bright purple for labels */
        font-weight: bold;
        margin-bottom: 0.5rem;
    }

    /* Input/File Field Styling */
    .form-control {
        background-color: #2b263b;
        border: 1px solid #6a0dad;
        color: #ffffff;
        transition: all 0.3s ease;
        border-radius: 8px;
        padding: 0.75rem 1rem;
    }

        /* Focus State */
        .form-control:focus {
            background-color: #3f3952;
            border-color: #d175ff;
            box-shadow: 0 0 8px rgba(209, 117, 255, 0.9);
            color: #ffffff;
        }

    /* Validation Text Styling */
    .text-danger {
        color: #ff6666 !important;
        font-weight: bold;
    }

    /* Current Image Styling */
    .imgCinema {
        border-radius: 8px; /* Rounded corners for images */
        border: 3px solid #d175ff; /* Bright Neon frame around the image */
        object-fit: cover;
        height: 100px; /* Adjust size for visibility */
        width: 150px;
        display: block; /* Ensure it takes up its own line */
    }

    .text-muted {
        /* Style for "No image uploaded" text */
        color: #9333ea !important;
        font-style: italic;
        font-size: 0.9rem;
    }

    /* Update Button (btn-primary) - Primary Purple */
    .btn-primary {
        /* Note: We use btn-primary here for Update, but apply the same purple color as btn-success/Add */
        background-color: #6a0dad;
        border-color: #6a0dad;
        color: #ffffff;
        font-weight: bold;
        letter-spacing: 1px;
        transition: all 0.3s ease;
        border-radius: 8px;
    }

        .btn-primary:hover {
            background-color: #9333ea;
            border-color: #9333ea;
            box-shadow: 0 0 15px rgba(209, 117, 255, 0.8);
        }

    /* Back Button (btn-secondary) */
    .btn-secondary {
        background-color: #3b3054;
        border-color: #3b3054;
        color: #f0f0f0;
        font-weight: 500;
        border-radius: 8px;
        margin-left: 10px;
    }

        .btn-secondary:hover {
            background-color: #4c406b;
            border-color: #4c406b;
        }
            </style>