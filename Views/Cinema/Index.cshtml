



@model IEnumerable<movie_hospital_1.dataModel.Cinema>

<h2 class="mb-4 text-center">🎬 Cinema List</h2>

<a asp-action="Create" class="btn btn-success mb-3">➕ Add New Cinema</a>

<table class="table table-striped table-bordered text-center align-middle">
    <thead class="table-dark">
        <tr>
            <th>Image</th>
            <th>Name</th>
          <th>Location</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @if (!string.IsNullOrEmpty(item.ImageURL))
                    {
                        <img src="@item.ImageURL" class="imgCinema" width="80" alt="Cinema Image" />
                    }
                    else
                    {
                        <span class="text-muted">No Image</span>
                    }
                </td>
                <td>@item.Name</td>
                <td>@item.Location</td>
             
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">✏️ Edit</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">🗑 Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

