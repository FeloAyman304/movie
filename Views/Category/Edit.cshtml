@model movie_hospital_1.dataModel.Category

@{
    ViewData["Title"] = "Edit Category";
}

<div class="container mt-5">
    <div class="card shadow-lg p-4 rounded-4">
        <h2 class="text-center mb-4 text-warning">✏ Edit Category</h2>

        <form asp-action="Edit" method="post">
            <input type="hidden" asp-for="Id" />

            <div class="mb-3">
                <label asp-for="Name" class="form-label fw-bold">Category Name</label>
                <input asp-for="Name" class="form-control" placeholder="Enter category name" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Description" class="form-label fw-bold">Description</label>
                <textarea asp-for="Description" class="form-control" rows="4" placeholder="Enter description"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="d-flex justify-content-between mt-4">
                <a asp-action="Index" class="btn btn-secondary px-4">⬅ Back to List</a>
                <button type="submit" class="btn btn-success px-4">💾 Save Changes</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

<style>
    /* General Body and Container Styling */
    body {
        /* Set a dark background color for the whole page */
        background-color: #0d0a17;
        color: #f0f0f0; /* Light text color for contrast */
        font-family: 'Arial', sans-serif;
        padding: 20px 0; /* Add padding to body for better look */
    }

    /* Card Styling - Targeting the 'card' element */
    .card {
        /* Set dark background and neon glow for the card */
        background-color: #1a1625 !important;
        border: 1px solid #6a0dad; /* A dark purple border */
        border-radius: 12px !important; /* Ensure rounded corners are applied */
        box-shadow: 0 0 20px rgba(106, 13, 173, 0.7), 0 0 5px rgba(106, 13, 173, 0.5) !important; /* Neon purple glow */
        color: #f0f0f0;
        max-width: 600px; /* Keep the form centered and contained (as in your inline style) */
        margin: auto; /* Center the card */
    }

    /* Heading Styling - Neon purple color (Overriding text-warning) */
    h2.text-warning {
        color: #d175ff !important; /* A bright purple/magenta, overriding Bootstrap's warning color */
        text-shadow: 0 0 10px rgba(209, 117, 255, 0.8); /* Light glow for the header */
        padding-bottom: 10px;
        border-bottom: 2px solid #3b3054; /* Subtle dark separator */
    }

    /* Label Styling */
    .form-label {
        color: #d175ff; /* Match the bright purple for labels */
        font-weight: bold !important;
    }

    /* Input/Textarea Styling - Dark background for fields */
    .form-control {
        background-color: #2b263b; /* Slightly lighter dark background for input fields */
        border: 1px solid #6a0dad; /* Dark purple border */
        color: #ffffff; /* White text inside the input */
        transition: all 0.3s ease;
        border-radius: 8px;
    }

        /* Focus State for Inputs - Enhance the neon glow on focus */
        .form-control:focus {
            background-color: #3f3952;
            border-color: #d175ff; /* Bright purple border on focus */
            box-shadow: 0 0 8px rgba(209, 117, 255, 0.9); /* Stronger neon glow */
            color: #ffffff;
        }

    /* Validation Text Styling */
    .text-danger {
        color: #ff6666 !important; /* Use a bright red for errors */
        font-weight: bold;
    }

    /* Submit Button Styling (Save Changes) - Primary purple */
    .btn-success {
        /* Primary button color - Dark purple */
        background-color: #6a0dad;
        border-color: #6a0dad;
        color: #ffffff;
        font-weight: bold;
        letter-spacing: 1px;
        transition: all 0.3s ease;
    }

        .btn-success:hover, .btn-success:focus {
            /* Hover state - Brighter neon purple */
            background-color: #9333ea;
            border-color: #9333ea;
            box-shadow: 0 0 15px rgba(209, 117, 255, 0.8); /* Glow effect on hover */
        }

    /* Back Button Styling - Secondary color */
    .btn-secondary {
        background-color: #3b3054; /* Darker, muted purple for secondary action */
        border-color: #3b3054;
        color: #f0f0f0;
    }

        .btn-secondary:hover {
            background-color: #4c406b;
            border-color: #4c406b;
        }

    /* Clear the inline style you provided in the Razor Page */
    .container.mt-5 > style {
        display: none;
    }</style>
