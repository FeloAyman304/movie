

@model movie_hospital_1.dataModel.Actor

<h2>✏ Edit Actor</h2>

<form asp-action="Edit" enctype="multipart/form-data">
    <input type="hidden" asp-for="Id" />

    <div class="mb-3">
        <label class="form-label">Name</label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="form-label">Bio</label>
        <textarea asp-for="Bio" class="form-control"></textarea>
    </div>

    <div class="mb-3">
        <label class="form-label">Profile Picture</label><br />
        @if (!string.IsNullOrEmpty(Model.ProfilePicture))
        {
            <img src="@Model.ProfilePicture" alt="@Model.Name" width="100" height="100" class="rounded shadow mb-2" />
        }
        <input type="file" name="ProfileImage" class="form-control" accept="image/*" />
    </div>

    <button type="submit" class="btn btn-success">Update</button>
    <a asp-action="Index" class="btn btn-secondary">Back</a>
</form>

        <style>
    /* General Body Styling (Consistency) */
    body {
        background-color: #0d0a17;
        color: #f0f0f0;
        font-family: 'Arial', sans-serif;
        padding: 20px;
    }

    /* Page Heading Styling */
    h2 {
        color: #d175ff; /* Bright purple/magenta for the main heading */
        text-shadow: 0 0 10px rgba(209, 117, 255, 0.8);
        text-align: center;
        margin-bottom: 30px !important;
    }

    /* Form Container Styling */
    form {
        max-width: 500px;
        margin: 0 auto;
        padding: 30px;
        background-color: #1a1625; /* Dark background for the form area */
        border: 1px solid #6a0dad;
        border-radius: 12px;
        box-shadow: 0 0 20px rgba(106, 13, 173, 0.7), 0 0 5px rgba(106, 13, 173, 0.5); /* Neon glow */
    }

    /* Label Styling */
    .form-label,
    label {
        color: #d175ff; /* Bright purple for labels */
        font-weight: bold;
        margin-bottom: 0.5rem;
    }

    /* Input/Textarea/File Field Styling */
    .form-control {
        background-color: #2b263b;
        border: 1px solid #6a0dad;
        color: #ffffff;
        transition: all 0.3s ease;
        border-radius: 8px;
        padding: 0.75rem 1rem;
    }

        /* Focus State */
        .form-control:focus {
            background-color: #3f3952;
            border-color: #d175ff;
            box-shadow: 0 0 8px rgba(209, 117, 255, 0.9);
            color: #ffffff;
        }

    /* Validation Text Styling */
    .text-danger {
        color: #ff6666 !important;
        font-weight: bold;
    }

    /* Current Profile Picture Styling */
    form img.rounded.shadow {
        /* Targeting the image inside the form for editing */
        border-radius: 50% !important; /* Make profile picture circular */
        border: 3px solid #d175ff; /* Bright Neon frame */
        object-fit: cover;
        box-shadow: 0 0 10px rgba(209, 117, 255, 0.5); /* Soft glow around the image */
        display: block;
        margin-bottom: 10px;
    }

    /* Update Button (btn-success) - Primary Purple */
    .btn-success {
        /* Applying the primary purple neon style to the success button (Update) */
        background-color: #6a0dad;
        border-color: #6a0dad;
        color: #ffffff;
        font-weight: bold;
        letter-spacing: 1px;
        transition: all 0.3s ease;
        border-radius: 8px;
        margin-right: 10px;
    }

        .btn-success:hover {
            background-color: #9333ea;
            border-color: #9333ea;
            box-shadow: 0 0 15px rgba(209, 117, 255, 0.8);
        }

    /* Back Button (btn-secondary) */
    .btn-secondary {
        background-color: #3b3054;
        border-color: #3b3054;
        color: #f0f0f0;
        font-weight: 500;
        border-radius: 8px;
    }

        .btn-secondary:hover {
            background-color: #4c406b;
            border-color: #4c406b;
        }
        </style>