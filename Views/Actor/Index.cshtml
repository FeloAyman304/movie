

@model IEnumerable<movie_hospital_1.dataModel.Actor>

<h2>🎭 Actors List</h2>
<a asp-action="Create" class="btn btn-primary mb-3">➕ Add Actor</a>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Image</th>
            <th>Name</th>
            <th>Bio</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var actor in Model)
        {
            <tr>
                <td>
                    @if (!string.IsNullOrEmpty(actor.ProfilePicture))
                    {
                        <img src="@actor.ProfilePicture" alt="@actor.Name" width="80" height="80" class="rounded shadow" />
                    }
                    else
                    {
                        <span>No Image</span>
                    }
                </td>
                <td>@actor.Name</td>
                <td>@actor.Bio</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@actor.Id" class="btn btn-warning btn-sm">Edit</a>
                    <a asp-action="Delete" asp-route-id="@actor.Id" class="btn btn-danger btn-sm">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<style>
    /* General Body Styling (Consistency with previous pages) */
    body {
        background-color: #0d0a17;
        color: #f0f0f0;
        font-family: 'Arial', sans-serif;
        padding: 20px 0;
    }

    /* Page Heading Styling */
    h2 {
        color: #d175ff; /* Bright purple/magenta for the main heading */
        text-shadow: 0 0 10px rgba(209, 117, 255, 0.8);
        text-align: center;
        margin-bottom: 30px !important;
    }

    /* Add Actor Button (btn-primary is used for the Create action) */
    .btn-primary {
        background-color: #6a0dad; /* Dark Purple primary color */
        border-color: #6a0dad;
        color: #ffffff;
        font-weight: bold;
        letter-spacing: 1px;
        transition: all 0.3s ease;
        border-radius: 8px;
    }

        .btn-primary:hover {
            background-color: #9333ea;
            border-color: #9333ea;
            box-shadow: 0 0 15px rgba(209, 117, 255, 0.8);
        }

    /* Table Styling */
    .table {
        background-color: #1a1625; /* Dark background for the entire table */
        border: 1px solid #3b3054 !important;
        color: #f0f0f0; /* Light text color for table content */
        border-radius: 10px;
        overflow: hidden;
        width: 100%;
    }

        /* Table Header Styling (thead) */
        .table thead {
            /* Use the dark header style for all table headers */
            background-color: #3b3054 !important;
            border-bottom: 2px solid #6a0dad;
        }

        .table th {
            color: #d175ff; /* Neon text color for column titles */
            font-weight: bold;
            text-transform: uppercase;
            vertical-align: middle;
            border-color: #3b3054;
        }

        /* Table Body Rows Styling (tbody) */
        .table tbody tr {
            transition: background-color 0.3s ease;
        }

            .table tbody tr:hover {
                background-color: #2b263b; /* Slightly lighter background on hover */
            }

        .table tbody td {
            border-color: #3b3054; /* Consistent border color */
            vertical-align: middle; /* Center cell content vertically */
            /* Limiting Bio text length */
            max-width: 300px;
            overflow: hidden;
            text-overflow: ellipsis;
        }

        /* Actor Image Styling */
        .table tbody img {
            /* The image has classes 'rounded shadow' in HTML. We target <img> in <tbody> */
            border-radius: 50% !important; /* Make profile pictures circular */
            border: 3px solid #d175ff; /* Bright Neon border/frame */
            object-fit: cover;
            width: 80px;
            height: 80px;
            box-shadow: 0 0 10px rgba(209, 117, 255, 0.5); /* Soft glow around the image */
        }

        .table tbody span {
            /* Style for "No Image" text */
            color: #9333ea !important;
            font-style: italic;
            font-size: 0.9rem;
        }

    /* Actions Column Buttons (Small size - btn-sm) */

    /* Edit Button (btn-warning/Neon Purple) */
    .btn-warning {
        background-color: #d175ff;
        border-color: #d175ff;
        color: #1a1625 !important;
        font-weight: bold;
        border-radius: 5px;
        margin-right: 5px;
    }

        .btn-warning:hover {
            background-color: #e599ff;
            border-color: #e599ff;
        }

    /* Delete Button (btn-danger/Red) */
    .btn-danger {
        background-color: #ff6666;
        border-color: #ff6666;
        color: #ffffff;
        font-weight: bold;
        border-radius: 5px;
    }

        .btn-danger:hover {
            background-color: #ff4d4d;
            border-color: #ff4d4d;
        }
</style>
