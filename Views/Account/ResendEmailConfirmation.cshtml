@model movie_hospital_1.dataModel.ResendEmailConfirmationVM

@{
    ViewData["Title"] = "ResendEmailConfirmation";
}

<div class="container">
    <h1>ResendEmailConfirmation</h1>

    <h4>ResendEmailConfirmationVM</h4>
