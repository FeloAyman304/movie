@model movie_hospital_1.dataModel.ValidateOTPVM

@{
    ViewData["Title"] = "Validate OTP";
}
<div class="container">

    <h1>Validate OTP</h1>

    @* ✅ عرض رسالة الخطأ إن وجدت *@
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
    }

    <hr />
    <div class="row">
        <div class="col-md-12">
            <form asp-action="ValidateOTP" method="post">
                <input type="hidden" name="ApplicationUserId" value="@Model.ApplicationUserId" />

                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group">
                    <label asp-for="OTP" class="control-label"></label>
                    <input asp-for="OTP" class="form-control" />
                    <span asp-validation-for="OTP" class="text-danger"></span>
                </div>

                <div class="form-group mt-4">
                    <input type="submit" value="Confirm" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
