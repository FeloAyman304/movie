            box-shadow: 0 0 5px rgba(209, 117, 255, 0.8);
        }

    .form-check-label {
        color: #f0f0f0;
        font-weight: normal;
    }

    /* Validation Text Styling */
    .text-danger {
        color: #ff6666 !important;
        font-weight: bold;
    }

    /* Save Changes Button (btn-success) - Primary Purple */
    .btn-success {
        background-color: #6a0dad;
        border-color: #6a0dad;
        color: #ffffff;
        font-weight: bold;
        letter-spacing: 1px;
        transition: all 0.3s ease;
        border-radius: 8px;
        margin-right: 10px;
    }

        .btn-success:hover {
            background-color: #9333ea;
