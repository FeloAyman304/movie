    }

    /* Validation Text Styling */
    .text-danger {
        color: #ff6666 !important;
        font-weight: bold;
    }

    /* Save Button (btn-success) - Primary Purple */
    .btn-success {
        background-color: #6a0dad;
        border-color: #6a0dad;
        color: #ffffff;
        font-weight: bold;
        letter-spacing: 1px;
        transition: all 0.3s ease;
        border-radius: 8px;
        margin-right: 10px;
    }

        .btn-success:hover {
            background-color: #9333ea;
            border-color: #9333ea;
            box-shadow: 0 0 15px rgba(209, 117, 255, 0.8);
        }

    /* Back Button (btn-secondary) */
    .btn-secondary {
        background-color: #3b3054;
        border-color: #3b3054;
        color: #f0f0f0;
        font-weight: 500;
        border-radius: 8px;
    }

        .btn-secondary:hover {
            background-color: #4c406b;
            border-color: #4c406b;
        }
</style>
